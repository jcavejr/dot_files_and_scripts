#!/usr/bin/env bash
#http://www.linuxproblem.org/art_9.html <- for ssh/scp without a password
#current working directory
CWD=$(pwd)
#net id. change this if you aren't me
NETID=jtc178
DIRECTORY='~/candsystems/assignments'

#copy c files, h files, and makefile to folder $1 in DIRECTORY
if  [ $# -eq 1 ]
then
    scp $CWD/*.y86 $CWD/*.tar.gz $CWD/*.c $CWD/makefile $CWD/*.h $NETID@clamshell.rutgers.edu:$DIRECTORY/$1/
else
    echo "Error: Argument 1 is required but was not supplied"
fi
